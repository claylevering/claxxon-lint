{
    "name": "@claylevering/eslint-config",
    "author": "Clay Levering",
    "version": "2.0.14",
    "description": "A set of ESLint configurations supporting flat config format with Vue (and with TypeScript), Node, and TypeScript rules",
    "license": "MIT",
    "main": "index.js",
    "type": "module",
    "exports": {
        ".": "./index.js",
        "./configs/node": "./configs/node.js",
        "./configs/typescript": "./configs/typescript.js",
        "./configs/vue": "./configs/vue.js",
        "./configs/nuxt": "./configs/nuxt.js"
    },
    "files": [
        "index.js",
        "configs/",
        "custom-rules/",
        "LICENSE",
        "README.md",
        "CLAUDE.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/claylevering/claxxon-lint.git"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "prettier": "prettier .",
        "prettier:fix": "prettier . --write",
        "lint": "pnpm run eslint && pnpm run prettier",
        "lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
        "test": "pnpm run lint",
        "publish:github": "pnpm publish"
    },
    "keywords": [
        "eslint-config",
        "eslint-plugin",
        "eslint",
        "eslintplugin",
        "flat-config",
        "node",
        "typescript",
        "vue"
    ],
    "dependencies": {
        "@eslint/js": "^9.15.0",
        "globals": "^16.5.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-vue": "^10.0.0",
        "nuxt": "^4.2.2",
        "prettier": "3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.0.0",
        "vue": "^3.5.25",
        "vue-eslint-parser": "^10.0.0"
    },
    "peerDependencies": {
        "@nuxt/eslint": ">=1.0.0",
        "eslint": ">=9.0.0",
        "eslint-plugin-vue": ">=10.0.0",
        "typescript-eslint": ">=8.0.0",
        "vue-eslint-parser": ">=10.0.0"
    },
    "peerDependenciesMeta": {
        "@nuxt/eslint": {
            "optional": true
        },
        "eslint-plugin-vue": {
            "optional": true
        },
        "typescript-eslint": {
            "optional": true
        },
        "vue-eslint-parser": {
            "optional": true
        }
    }
}
